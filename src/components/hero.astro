---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Crafting stellar travel experiences.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      WebFrontDesk is a boutique consulting company with deep experience in the hospitality
      industry. We can help integrate with multiple travel partners to bring the best in technology
      to your customers.<wbr /> 
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="mailto:info@webfrontdesk.com"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:envelope" />

         Contact Us
      </Link>
    </div>
  </div>
</main>
